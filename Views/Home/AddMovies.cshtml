@{
    ViewData["Title"] = "Form";
}
@model Movies;

<div class="container">
    <form asp-action="AddMovies" method="POST">
        <div class="form-group">
            <label asp-for="Category">Category</label>
            <input class="form-control" asp-for="Category" type="text" />
            <span class="text-danger" asp-validation-for="Category"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title" type="text" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year">Year</label>
            <input class="form-control" asp-for="Year" type="text" />
            <span class="text-danger" asp-validation-for="Year"></span>
        </div>
        <div class="form-group">
            <label asp-for="Director">Director</label>
            <input class="form-control" asp-for="Director" type="text" />
            <span class="text-danger" asp-validation-for="Director"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating">Rating</label>
            <select class="form-select" asp-for="Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span class="text-danger" asp-validation-for="Rating"></span>
        </div>
        <div class="form-check form-check-inline">
            <label class="form-check-label" asp-for="Edited">Edited</label>
        </div>
        <div class="form-check form-check-inline">
            <label class="form-check-label" asp-for="Edited">Yes</label>
            <input class="form-check-input" asp-for="Edited" type="radio" value="true" />
        </div>
        <div class="form-check form-check-inline">
            <label class="form-check-label" asp-for="Edited">No</label>
            <input class="form-check-input" asp-for="Edited" type="radio" value="false" />
            <span class="text-danger" asp-validation-for="Edited"></span>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="LentTo">Lent To</label>
            <input class="form-control" asp-for="LentTo" type="text" />
            <span class="text-danger" asp-validation-for="LentTo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes</label>
            <input class="form-control" asp-for="Notes" type="text" />
            <span class="text-danger" asp-validation-for="Notes"></span>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>